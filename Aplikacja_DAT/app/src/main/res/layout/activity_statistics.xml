<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatisticsActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Urządzenie 1"
            android:textColor="@color/black"
            android:textSize="60dp"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Czas przed ekranem"
            android:textAlignment="center"
            android:textColor="@color/purple_700"
            android:textSize="30dp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dzisiejsza aktywność:"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/TextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginStart="2dp"
                android:text="2h 15min"
                android:textSize="24dp"
                android:textColor="@color/purple_700" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Średnia dzienna z tygodnia:"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/TextView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4h 15min"
                android:textSize="23dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="2dp"
                android:textColor="@color/purple_700" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/btn5"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:text="Średnia dzienna z obecnego miesiąca:"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:textSize="20dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/TextView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4h 15min"
                android:layout_marginTop="22dp"
                android:layout_marginStart="2dp"
                android:textSize="22dp"
                android:textColor="@color/purple_700" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/btn6"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:text="Średnia dzienna z poprzedniego miesiąca:"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:layout_marginTop="8dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/TextView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4h 15min"
                android:textSize="23dp"
                android:layout_marginTop="22dp"
                android:layout_marginStart="2dp"
                android:textColor="@color/purple_700" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>